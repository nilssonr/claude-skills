{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": ".claude/hooks/session-start.sh"
      }
    ],
    "PreToolUse": [
      {
        "type": "command",
        "command": ".claude/hooks/commit-validator.sh",
        "matcher": "Bash"
      },
      {
        "type": "command",
        "command": ".claude/hooks/skill-eval.sh"
      }
    ],
    "PostToolUse": [
      {
        "type": "command",
        "command": ".claude/hooks/auto-format.sh",
        "matcher": "Write|Edit"
      }
    ],
    "PreCompact": [
      {
        "type": "command",
        "command": ".claude/hooks/pre-compact.sh"
      }
    ],
    "Stop": [
      {
        "type": "command",
        "command": ".claude/hooks/stop-gate.sh"
      }
    ]
  }
}
